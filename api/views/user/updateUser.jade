html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous")
        
        title Update User

    include ../menuLateral.jade

    div(class='container-fluid mb-5')
        div(class='row')
            div(class='col-1')
            div(class='col-10 pt-3')
                h2 Update User
                - if(error)
                    ul(class='list-group ul-style')  
                        h5 Fix the following errors:
                        - for errors in error
                            li(class="list-group-item list-group-item-danger alert alert-danger alert-dismissible fade show" role="alert")  #{errors.msg}    
                                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                                    span(aria-hidden="true")&times; 
            div(class='col-1') 

        br
        div(class='row')
            div(class='col')    
                form(id='form', action='/user/update/#{usuario._id}?_method=PUT', method='POST', style='white-space:pre;' autocomplete="off")
                    input(id='_id', name='_id', type='hidden', value='#{usuario._id}') 

                    div(class='row')
                        div(class='col-1')

                        div(class='col-3')
                            label(class='label-form-style') Nickname
                            input(class='form-control' id='nickname', name='nickname', type='text', value='#{usuario.nickname}')
                        
                        div(class='col-4')
                            Label(class='label-form-style') Country Code
                            select(id='country_code', class='form-control', name='country_code')
                                option #{usuario.country_code}
                                option +58
                                option +57
                                option +51
                                option +49
                                option +54
                                option +55
                                option +52
                                option +53
                                option +56
                                option +598
                                option +594
                                option +595
                                option +1
                                option +502
                                option +503
                                option +504
                                option +505
                                option +506
                                option +507
                        
                        div(class='col-3')
                            label(class='label-form-style') Phone
                            input(class='form-control' id='phone', name='phone', type='text', value='#{usuario.phone}')

                        div(class='col-1')
                    br
                    div(class="row")
                        div(class='col-1')

                        div(class='col-2')
                            label(class='label-form-style') Extra Lifes
                            input(class='form-control' id='extra_life', name='extra_life', type='text', value='#{usuario.extra_life}', readonly)
                        
                        div(class='col-3')
                            label(class='label-form-style') Balance
                            input(class='form-control' id='balance', name='balance', type='text', value='#{usuario.balance}', readonly)

                        div(class='col-3')
                            label(class='label-form-style') Shared Code
                            input(class='form-control' id='shared_code', name='shared_code', type='text', value='#{usuario.shared_code}', readonly)
                        

                        div(class='col-2')
                            label(class='label-form-style') Referral Code
                            input(class='form-control' id='referral_code', name='referral_code', type='text', value='#{usuario.referral_code}', readonly)

                        div(class='col-1')
                    br
                    div(class='row')
                        div(class='col-1')
                        div(class='col-10 d-flex justify-content-between')
                            a(href='/user' class='back-style pl-3 pr-3 btn btn-outline-success' role="button")  Cancel
                            input(type='submit', class='input-style-update btn btn-success' value='Save')
                        div(class='col-1')
