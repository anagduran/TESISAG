html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous")

        script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js") 
        script(type="text/javascript" src='js/bootstrap.js')
        script(type="text/javascript" src='js/bootstrap.min.js')
        title New Notification
    include ../menuLateral.jade
    br
    div(class='container')
        div(class='row')
            div(class='offset-2 pt-3')
                h2 New Category


                - if(error)
                    ul(class='list-group ul-style')
                        h5 Arreglar los siguientes errores:
                        - for errors in error
                            li(class="list-group-item list-group-item-danger alert alert-danger alert-dismissible fade show" role="alert")  #{errors.msg}    
                                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                                    span(aria-hidden="true")&times;
        br
        br
        form(id='form', action='/notification/new', method='POST' autocomplete="off")
            div(class='row offset-2')
                div(class='form-group col-8')
                    Label(class='label-form-style') type
                    input(class='form-control' id='name', name='type', placeholder='type a name')

                div(class='form-group col-8')
                    Label(class='label-form-style') subject  
                    input(size='65' class='form-control' id='description', name='subject', placeholder='type a description')

                div(class='form-group col-8')
                    Label(class='label-form-style') message  
                    input(size='65' class='form-control' id='description', name='message', placeholder='type a description')

                div(class='form-group col-8')
                    Label(class='label-form-style') date
                    input(size='65' class='form-control' id='description', name='date', placeholder='type a description')
                div(class='form-group col-8')
                    Label(class='label-form-style') type
                    input(class='form-control' id='name', name='type2', placeholder='type a name')

                div(class='form-group col-8')
                    Label(class='label-form-style') subject  
                    input(size='65' class='form-control' id='description', name='subject2', placeholder='type a description')

                div(class='form-group col-8')
                    Label(class='label-form-style') message  
                    input(size='65' class='form-control' id='description', name='message2', placeholder='type a description')

                div(class='form-group col-8')
                    Label(class='label-form-style') date
                    input(size='65' class='form-control' id='description', name='date2', placeholder='type a description')
            br
            div(class='row offset-2')
                div(class='col d-flex justify-content-between')                  
                    a(href='/' class='back-style pl-3 pr-3 btn btn-outline-info' role="button")  Cancel
                    input(type='submit', class='btn btn-outline-success'  value='Save')
                        
script(type="text/javascript").