html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous")
        link(rel="stylesheet", type= "text/css", href="../public/css/style.css")
        title ALL CATEGORIES
    body
    h1 CATEGORIAS 
        
    table#general
      thead
        tr.head
            th ID Categoria
            th Nombre Categoria 
            th Descripcion Categoria
            th Acciones
      
      tbody
        -var i= -1
        each categoria in categorias  
            - ++i   
            tr(class=(i % 2 == 0) ? 'odd' : 'even')  
                td #{categoria._id}
                td #{categoria.name} 
                td #{categoria.description}
                td 
                    a(href='/category/#{categoria._id}') 
                        i.fa.fa-eye
                    a(href='/category/edit/#{categoria._id}') 
                        i.fas.fa-pencil-alt
                    form(action='/category/delete/#{categoria._id}?_method=DELETE' class= "link" method="POST")
                        button(type="submit" class= "fas fa-trash-alt" id="button1")
                       
                
    a(href='/') BACK - 
    br
    a(href='/category/create' class="boton" value="new category")

                
        
