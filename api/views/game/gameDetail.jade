html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous")
        

        
        

        title Game Detail
    include ../menuLateral.jade
    
    - if(message)
        div(class='row')
            div(class='col-1')
            div(class="mt-2 col-10 alert alert-success fade show" role="alert") #{message}    
                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true")&times; 
            div(class='col-1')
    
    div(class='container-fluid mb-5')
        div(class='row')
            div(class='col-1')
            div(class='col-10')
                h2 Game Detail
            div(class='col-1')
        
        br
        div(class='row form-group')
            div(class='col-1')
            div(class='col-2')
                Label(class='label-form-style3') Title
                input(type='text' size='50' class='form-control' value= '#{partida.title}' readonly)
        
            
            div(class='col-3')
                Label(class='label-form-style3') Date and Time                
                input(type='text' size='50' class='form-control' value= '#{partida.date}' readonly)
            
            
            div(class='col-3')
                Label(class='label-form-style3') Status                
                input(type='text' size='50' class='form-control' value= '#{partida.status}' readonly)

            
            div(class='col-2')
                Label(class='label-form-style3') Prize                
                input(type='text' size='50' class='form-control' value= '#{partida.prize}' readonly)
            div(class='col-1')

        div(class='row form-group')
            div(class='col-1')
            label(class='label-form-style d-flex align-items-center') Notification 1
            div(class='col-4') 
                Label(class='label-form-style3') subject
                - var changeNotification  = JSON.parse(JSON.stringify(partida.notification))[0]
                input(type='text' size='50' class='form-control' value= '#{changeNotification.subject}' readonly)
            div(class='col-4') 
                Label(class='label-form-style3') message
                - var changeNotification  = JSON.parse(JSON.stringify(partida.notification))[0]
                input(type='text' size='50' class='form-control' value= '#{changeNotification.message}' readonly)
            div(class='col-2') 
                Label(class='label-form-style3') Time
                - var changeNotification  = JSON.parse(JSON.stringify(partida.notification))[0]
                input(type='text' size='50' class='form-control' value= '#{changeNotification.date}' readonly)
            div(class='col-1')
        
        
        div(class='row form-group')
            div(class='col-1')
            label(class='label-form-style d-flex align-items-center') Notification 2
            
            div(class='col-4')                
                Label(class='label-form-style3') subject
                - var changeNotification  = JSON.parse(JSON.stringify(partida.notification))[1]
                input(type='text' size='50' class='form-control' value= '#{changeNotification.subject}' readonly)
            div(class='col-4') 
                Label(class='label-form-style3') message
                - var changeNotification  = JSON.parse(JSON.stringify(partida.notification))[1]
                input(type='text' size='50' class='form-control' value= '#{changeNotification.message}' readonly)
            div(class='col-2') 
                Label(class='label-form-style3') Time
                - var changeNotification  = JSON.parse(JSON.stringify(partida.notification))[1]
                input(type='text' size='50' class='form-control' value= '#{changeNotification.date}' readonly)
             div(class='col-1')
        br
        div(class='row form-group')
            div(class='col-1')
            div(class='col-10')
                Label(class='label-form-style3') Questions
            div(class='col-1')
        br
        
        
        div(class='row form-group')
            div(class='col-1')
            div(class='col-10')
                div(class='box-body')        
                            table(id='tablaUno' class='table table-sm table-bordered table-striped')
                                thead
                                    tr 
                                        th(class='tableAll th-actions-custom') #
                                        th(class='tableAll') Question
                                        th(class='tableAll') Option A
                                        th(class='tableAll') Option B
                                        th(class='tableAll') Option C and Answer
                                        th(class='tableAll') Level

                                tbody
                                    -var i= -1
                                    each pregunta in questions
                                        -var questionChange0 = JSON.parse(JSON.stringify(partida.questions))[0]  
                                        - ++i   
                                        tr
                                            td #{i} 
                                            td #{pregunta.question}
                                            td #{pregunta.options[0]}
                                            td #{pregunta.options[1]}
                                            td #{pregunta.options[2]}
                                            td #{pregunta.level}
                                    
                        
                    
                    
        br
        div(class='row')
            div(class='col-1') 
            div(class='col-10')        
                a(href='/game' class='back-style pl-3 pr-3 btn btn-outline-info' role="button")  Back
            div(class='col-1') 

        script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js") 
        script(type="text/javascript" src='/js/bootstrap.js')
        script(type="text/javascript" src='/js/bootstrap.min.js')