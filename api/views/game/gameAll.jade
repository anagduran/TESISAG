        title  Partidas
    include ../menuLateral.jade



    div(class='col-md-3 offset-2 row-style')
        h2(class='h1All') Partidas


    div(class='estilo-divtable col-md-6 offset-2 table-responsive')        
        table(width='100%' id='tablaUno' class='display tableAll table table-striped table-sm table-bordered')
            thead
                tr.head
                    th #
                    th(id='thDos') Titulo
                    th(id='thDos') Status
                    th Acciones

            tbody
                -var i= -1
                each partida in partidas 
                    - ++i   
                    tr(class=(i % 2 == 0) ? 'odd' : 'even')
                        td(id='tdUno' ) #{i}
                        td #{partida.title} 
                        td #{partida.status} 
                        
                        td
                            a(class='action-icon' href='/game/#{partida._id}') 
                                i(id='icon-see' class='fa fa-eye')
                            a(class='action-icon' href='/game/edit/#{partida._id}') 
                                i(id='icon-edit' class='fas fa-pencil-alt')
                            button(type='button' id='button1' class='fas fa-trash-alt' data-toggle="modal" data-target="#myModal2" value= partida._id onclick='obtenervalor(`#{partida._id}`);')                            
    






    div(class='row')     
        div(class='col-sm-4 offset-2')      
            a(href='/game/create' class='btn btn-outline-success' role='button') Nueva Partida

       
    script(type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/r-2.2.2/datatables.min.js")


