html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous")
        link(rel="stylesheet", type= "text/css", href="../public/css/style.css")
        link(rel="stylesheet" href="../public/css/bootstrap.css")
        script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js") 
        script(type="text/javascript" src='../public/js/bootstrap.js')
        script(type="text/javascript" src='../public/js/bootstrap.min.js')
        title Nueva Pregunta
    include ../menuLateral.jade
    
    div(class='container')
        div(class='row')
            div(class='col offset-2 row-style')
                h2 Nueva Pregunta

        - if(error)
            ul
                - for errors in error
                    li  #{errors.msg}  



        form(id='form', action='/question/new', method='POST' autocomplete="off")
         div(class='row')
            div(class='form-group row offset-3')
                Label(class='label-form-style') Pregunta 
                div(class='sol-sm-10 div-input-style')
                    input(size='65' id='question', class='input-style form-control' name='question')
                   

            div(class='form-group row offset-3')
                Label(class='label-form-style') Opción 1 
                div(class='sol-sm-10 div-input-style')
                     input(size='65' id='option1', class='input-style form-control', name='options')

            div(class='form-group row offset-3')
                Label(class='label-form-style') Opción 2
                div(class='sol-sm-10 div-input-style')
                    input(size='65' id='option2', class='input-style form-control', name='options')
            

             div(class='form-group row offset-3')
                Label(class='label-form-style') Opción 3
                div(class='sol-sm-10 div-input-style')           
                    input(size='65' id='option3', class='input-style form-control', name='options')
            
            
            div(class='form-group row offset-3')
                Label(class='label-form-style') Respuesta
                div(class='sol-sm-10 div-input-style')  
                    input(size='65' id='answer', class='input-style form-control', name='answer')
            
            div(class='offset-3')
                Label(class='level-label-form-style') Nivel
                
                label(class= "label-radio-button-style") Bajo 
                input(type='radio', name='level', value='bajo')      
                                    
                label(class= "label-radio-button-style2") Medio 
                input(type='radio', name='level', value='medio')

                label(class= "label-radio-button-style2") Alto 
                input(type='radio', name='level', value='alto')

            br
            br
            div(class='form-group row offset-3')
                Label(class='level-label-form-style') Categorias
                -each categoria, i in categorias
                    div(class='col-sm-10')
                       div(class="form-check form-check-inline")
                        input(type='checkbox' class='form-check-input' name='categoriasCombo' value="#{categoria._id}") 
                        label(class="form-check-label" for="gridCheck1") #{categoria.name}
                           
                                          
                div(class='col-sm-4 margin-div-cancel') 
                    a(href='/category' class='back-style pl-3 pr-3 btn btn-outline-info' role="button")  Cancelar
                
                div(class='col-3 margin-div-agree')
                        input(type='submit', class='btn btn-outline-success'  value='Crear Nueva Pregunta')
            
            
                
              
                  
                   
                     
                   
            
               
               