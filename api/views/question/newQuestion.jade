html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous")
        link(rel="stylesheet", type= "text/css", href="../public/css/style.css")
        link(rel="stylesheet" href="../public/css/bootstrap.css")
        script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js") 
        script(type="text/javascript" src='../public/js/bootstrap.js')
        script(type="text/javascript" src='../public/js/bootstrap.min.js')
        title New Question
    include ../menuLateral.jade
    
    div(class='container')
        div(class='row')
            div(class='col offset-2 row-style')
                h2 New Question

                - if(error)
                    ul(class='list-group ul-style') 
                        - for errors in error
                            li(class='list-group-item list-group-item-danger')  #{errors.msg}  



        form(id='form', action='/question/new', method='POST' autocomplete="off")
         div(class='row')
            div(class='form-group col-8 offset-2')
                Label(class='label-form-style') Question                
                input(id='question', class='form-control' name='question')
                   

            div(class='form-group col-8 offset-2')
                Label(class='label-form-style') Option 1                 
                input(id='option1', class='form-control', name='options')

            div(class='form-group col-8 offset-2')
                Label(class='label-form-style') Option 2                
                input(id='option2', class='form-control', name='options')
            

             div(class='form-group col-8 offset-2')
                Label(class='label-form-style') Option 3                         
                input(id='option3', class='form-control', name='options')
            
            
            div(class='form-group col-8 offset-2')
                Label(class='label-form-style') Answer                
                input(id='answer', class='form-control', name='answer')
            
            div(class='col-8 offset-2')
                Label(class='level-label-form-style') Level
                
                label(class= "label-radio-button-style") Bajo 
                input(type='radio', name='level', value='bajo')      
                                    
                label(class= "label-radio-button-style2") Medio 
                input(type='radio', name='level', value='medio')

                label(class= "label-radio-button-style2") Alto 
                input(type='radio', name='level', value='alto')

            br
            br
            div(class='form-group col-8 offset-2')
                Label(class='level-label-form-style') Categories
                -each categoria, i in categorias
                    div(class='col-sm-10')
                       div(class="form-check form-check-inline")
                        input(type='checkbox' class='form-check-input' name='categoriasCombo' value="#{categoria._id}") 
                        label(class="form-check-label" for="gridCheck1") #{categoria.name}
                           
                                          
            div(class='col-sm-4 margin-div-cancel offset-2') 
                    a(href='/category' class='back-style pl-3 pr-3 btn btn-outline-info' role="button")  Cancel
                
            div(class='col-3 margin-div-agree offset-2')
                        input(type='submit', class='btn btn-outline-success'  value='Save')
            
            
                
              
                  
                   
                     
                   
            
               
               