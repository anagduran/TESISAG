html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous")
        link(rel="stylesheet", type= "text/css", href="../public/css/style.css")
        link(rel="stylesheet" href="../public/css/bootstrap.css")
        title Detalle de Pregunta 
    include ../menuLateral.jade

    div(class='container')
        div(class='row')
            div(class='col offset-2 row-style')
                h2 Detalle de Pregunta


        div(class='row')
            div(class='form-group row offset-2')
                Label(class='label-form-style') Pregunta
                div(class='sol-sm-10 div-input-style')
                    input(type='text' size='50' class='input-style form-control' value= '#{pregunta.question}' readonly)
            
            div(class='form-group row offset-2')
                Label(class='label-form-style') Opción 1
                div(class='sol-sm-10 div-input-style')
                    input(type='text' size='50' class='input-style form-control' value= '#{pregunta.options[0]}' readonly)
            
            div(class='form-group row offset-2')
                Label(class='label-form-style') Opción 2
                div(class='sol-sm-10 div-input-style')
                    input(type='text' size='50' class='input-style form-control' value= '#{pregunta.options[1]}' readonly)
            
            div(class='form-group row offset-2')
                Label(class='label-form-style') Opción 3
                div(class='sol-sm-10 div-input-style')
                    input(type='text' size='50' class='input-style form-control' value= '#{pregunta.options[2]}' readonly)

            div(class='form-group row offset-2')
                Label(class='label-form-style2') Respuesta
                div(class='sol-sm-10 div-input-style2')
                    input(type='text' size='50' class='input-style form-control' value= '#{pregunta.answer}' readonly)


            div(class='form-group row offset-2')
                Label(class='label-form-style2') Nivel
                div(class='sol-sm-10 div-input-style3')
                    input(type='text' size='50' class='input-style form-control' value= '#{pregunta.level}' readonly)


            div(class='form-group row offset-2')
                Label(class='label-form-style2') Categoria(s)
                div(class='sol-sm-10 div-input-style4') 
                               
                        -var j= 0
                        - each categoria in pregunta.category                   
                            -var categoryChange2= JSON.parse(JSON.stringify(pregunta.category))[j]
                            - ++j       
                            p #{categoryChange2.name}

        div(class='row')
            div(class='col-sm-4 offset-1')        
                a(href='/question' class='back-style pl-3 pr-3 btn btn-outline-info' role="button")  Back to All Questions
              
    
    
     
